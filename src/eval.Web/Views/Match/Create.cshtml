@model eval.Domain.Match

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>MatchViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpponentName" class="control-label"></label>
                <input asp-for="OpponentName" class="form-control" />
                <span asp-validation-for="OpponentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReasonForLoss" class="control-label"></label>
                <input asp-for="ReasonForLoss" class="form-control" />
                <span asp-validation-for="ReasonForLoss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-action="CreateMatch" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
